tosca_definitions_version: tosca_simple_yaml_1_0

description: Persist M-CORD Subscriber

imports:
   - custom_types/vhssservice.yaml
   - custom_types/vmmeservice.yaml
   - custom_types/oaispgw.yaml
   - custom_types/vepcservice.yaml
   - custom_types/servicedependency.yaml

topology_template:
  node_templates:

    # Service VHSS
    service#oaihss:
      type: tosca.nodes.VHSSService
      properties:
        name: VHSSService

    # Service VMME
    service#oaimme:
      type: tosca.nodes.VMMEService
      properties:
        name: VMMEService

    # Service VSPGW
    service#oaispgw:
      type: tosca.nodes.OAISPGW
      properties:
        name: OAISPGW

    # Service dependency from VMME to VHSS
    mcord_vmme_hss:
      type: tosca.nodes.ServiceDependency
      properties:
        connect_method: None
      requirements:
        - subscriber_service:
            node: service#oaimme
            relationship: tosca.relationships.BelongsToOne
        - provider_service:
            node: service#oaihss
            relationship: tosca.relationships.BelongsToOne

    # Service dependency from VMME to VSPGW
    mcord_vmme_spgw:
      type: tosca.nodes.ServiceDependency
      properties:
        connect_method: None
      requirements:
        - subscriber_service:
            node: service#oaimme
            relationship: tosca.relationships.BelongsToOne
        - provider_service:
            node: service#oaispgw
            relationship: tosca.relationships.BelongsToOne
