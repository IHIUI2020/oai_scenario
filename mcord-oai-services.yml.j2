      type: tosca.nodes.NetworkSlice
      requirements:
        - network:
            node: vmme_network
            relationship: tosca.relationships.BelongsToOne
        - slice:
            node: {{ site_name }}_vmme
            relationship: tosca.relationships.BelongsToOne

# vHSS private network slice
